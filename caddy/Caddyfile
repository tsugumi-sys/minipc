{
	log main {
		output file /var/log/caddy/access.log {
			roll_size 3gb
			roll_keep 10
			roll_keep_for 2160h
		}
	}
}

:80 {
	# You have to place this in every route you want to add logs
	log main

	respond "Hello, world!"

	handle /report* {
		# Serve GoAccess report (HTML dashboard)
		root * /var/goaccess/
		file_server
	}

	# --- Honeypot routes start here ---
	handle /admin {
		respond "403 Forbidden" 403
	}

	handle /secret {
		respond "Access denied" 403
	}

	handle /hidden-login {
		respond "Login not allowed" 403
	}

	handle /login* {
		# root * /home/tsugumisys/caddy-assets/html/login/
		# file_server
		response "login page"
	}

	# --- Honeypot routes end here ---
}
